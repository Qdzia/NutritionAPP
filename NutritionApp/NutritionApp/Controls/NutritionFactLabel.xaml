<UserControl x:Class="NutritionApp.Controls.NutritionFactLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NutritionApp.Controls"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <local:Counter x:Name="Calories" Grid.Column="0" CounterName="Calories" Unit="Kcal"/>
        <local:Counter x:Name="Fat" Grid.Column="1" CounterName="Fat" Unit="gram" />
        <local:Counter x:Name="Carbs" Grid.Column="2" CounterName="Carbs" Unit="gram" />
        <local:Counter x:Name="Fiber" Grid.Column="3" CounterName="Fiber" Unit="gram" />
        <local:Counter x:Name="Sugar" Grid.Column="4" CounterName="Sugar" Unit="gram" />
        <local:Counter x:Name="Protein" Grid.Column="5" CounterName="Protein" Unit="gram"/>



    </Grid>
</UserControl>
